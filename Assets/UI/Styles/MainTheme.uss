/* Variables */
:root {
    --primary-color: rgb(66, 135, 245);
    --primary-hover: rgb(100, 160, 255);
    --bg-dark: rgb(30, 30, 40);
    --bg-card: rgb(45, 45, 60);
    --text-primary: rgb(255, 255, 255);
    --text-secondary: rgb(180, 180, 200);
    --border-radius: 8px;
}

/* Container principal */
.main-container {
    flex-grow: 1;
    background-color: var(--bg-dark);
    padding: 20px;
}

.center-container {
    flex-grow: 1;
    justify-content: center;
    align-items: center;
}

/* Titres */
.title {
    font-size: 48px;
    color: var(--text-primary);
    -unity-font-style: bold;
    margin-bottom: 40px;
}

.subtitle {
    font-size: 24px;
    color: var(--text-secondary);
    margin-bottom: 20px;
}

/* Boutons */
.btn {
    padding: 15px 30px;
    border-radius: var(--border-radius);
    border-width: 0;
    font-size: 16px;
    -unity-font-style: bold;
    transition-duration: 0.2s;
}

.btn-primary {
    background-color: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background-color: var(--primary-hover);
    scale: 1.05;
}

.btn-secondary {
    background-color: transparent;
    border-width: 2px;
    border-color: var(--primary-color);
    color: var(--primary-color);
}

.btn-secondary:hover {
    background-color: rgba(66, 135, 245, 0.2);
}

/* Inputs */
.input-field {
    background-color: var(--bg-card);
    border-radius: var(--border-radius);
    border-width: 1px;
    border-color: rgba(255, 255, 255, 0.1);
    padding: 12px 16px;
    color: var(--text-primary);
    font-size: 16px;
    margin-bottom: 15px;
}

.input-field:focus {
    border-color: var(--primary-color);
}

.input-field > Label {
    color: var(--text-secondary);
    font-size: 14px;
    margin-bottom: 5px;
}

/* Cards */
.card {
    background-color: var(--bg-card);
    border-radius: var(--border-radius);
    padding: 20px;
    margin: 10px;
}

/* Liste */
.list-container {
    flex-grow: 1;
    background-color: var(--bg-card);
    border-radius: var(--border-radius);
    padding: 10px;
}

.list-item {
    padding: 15px;
    border-radius: 4px;
    margin: 5px 0;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.list-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

/* Status indicators */
.status-online {
    width: 12px;
    height: 12px;
    border-radius: 6px;
    background-color: rgb(46, 204, 113);
}

.status-offline {
    width: 12px;
    height: 12px;
    border-radius: 6px;
    background-color: rgb(231, 76, 60);
}
