<?xml version="1.0" encoding="utf-8"?>
<ui:UXML xmlns:ui="UnityEngine.UIElements">
    <ui:Style src="project://database/Assets/UI/Styles/MainTheme.uss" />
    
    <ui:VisualElement class="main-container" style="justify-content: space-between;">
        <!-- Top bar -->
        <ui:VisualElement style="flex-direction: row; justify-content: space-between; padding: 10px;">
            <ui:Label name="player-name" text="Player" class="subtitle" />
            <ui:Label name="score" text="Score: 0" class="subtitle" />
        </ui:VisualElement>
        
        <!-- Game area (vide, rendu par Unity) -->
        <ui:VisualElement style="flex-grow: 1;" />
        
        <!-- Bottom bar -->
        <ui:VisualElement style="flex-direction: row; justify-content: center; padding: 10px;">
            <ui:Button name="btn-pause" text="Pause" class="btn btn-secondary" />
            <ui:Button name="btn-quit-game" text="Quitter" class="btn btn-secondary" style="margin-left: 10px;" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
