/* Fullscreen overlay */
#network-bootstrap-root {
    position: absolute;
    left: 0; right: 0; top: 0; bottom: 0;
    justify-content: center;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.65);

    opacity: 1;
    transition-property: opacity;
    transition-duration: 0.20s;
    transition-timing-function: ease-in-out;
}

/* Card/panel */
#panel {
    width: 520px;
    max-width: 640px;

    padding-left: 20px;
    padding-right: 20px;
    padding-top: 16px;
    padding-bottom: 16px;

    background-color: rgba(31, 31, 31, 0.95);
    border-radius: 8px;
}

/* Title */
#bootstrap-title {
    -unity-font-style: bold;
    font-size: 18px;
    margin-bottom: 8px;
}

/* ProgressBar spacing */
#bootstrap-progress {
    height: 16px;
    margin-bottom: 8px;
}

/* Step label */
#bootstrap-step {
    -unity-font-style: bold;
    margin-bottom: 4px;
}

#bootstrap-substep {
    margin-bottom: 6px;
}

/* Error */
#bootstrap-error {
    color: rgb(255, 100, 100);
    margin-bottom: 6px;
    display: none;
}

/* Log */
#bootstrap-log {
    height: 140px;
    margin-top: 6px;
}

/* Fade helper */
.hidden {
    opacity: 0;
}
