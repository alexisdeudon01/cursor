/* ========================================
   GAME CREATION FLOW GUIDE - VISUAL TOOLTIPS
   ======================================== */

/* Step Indicators for Game Creation Flow */
.flow-step-container {
    padding: 12px 16px;
    background-color: rgba(100, 130, 180, 0.12);
    border-radius: 8px;
    border-left-width: 4px;
    border-left-color: rgb(100, 130, 180);
    margin-bottom: 16px;
}

.flow-step-number {
    font-size: 18px;
    color: rgb(100, 130, 180);
    -unity-font-style: bold;
    margin-right: 10px;
}

.flow-step-title {
    font-size: 14px;
    color: rgb(200, 210, 230);
    -unity-font-style: bold;
    margin-bottom: 4px;
}

.flow-step-description {
    font-size: 12px;
    color: rgb(140, 150, 170);
}

/* Action Required Indicator */
.action-required {
    padding: 10px 14px;
    background-color: rgba(255, 200, 75, 0.15);
    border-radius: 8px;
    border-left-width: 3px;
    border-left-color: rgb(255, 200, 75);
    margin-top: 12px;
}

.action-required-text {
    font-size: 12px;
    color: rgb(255, 220, 120);
    -unity-font-style: bold;
}

/* Success State Indicator */
.flow-success {
    padding: 10px 14px;
    background-color: rgba(75, 190, 115, 0.15);
    border-radius: 8px;
    border-left-width: 3px;
    border-left-color: rgb(75, 190, 115);
    margin-top: 12px;
}

.flow-success-text {
    font-size: 12px;
    color: rgb(120, 210, 150);
    -unity-font-style: bold;
}

/* Waiting State Indicator */
.flow-waiting {
    padding: 10px 14px;
    background-color: rgba(140, 90, 205, 0.15);
    border-radius: 8px;
    border-left-width: 3px;
    border-left-color: rgb(140, 90, 205);
    margin-top: 12px;
}

.flow-waiting-text {
    font-size: 12px;
    color: rgb(180, 140, 220);
    -unity-font-style: bold;
}

/* Enhanced Session Item with Flow Indicators */
.session-item.hosting {
    border-left-width: 4px;
    border-left-color: rgb(255, 200, 75);
}

.session-item.ready-to-start {
    border-left-width: 4px;
    border-left-color: rgb(75, 190, 115);
}

/* Enhanced Create Button States */
.create-btn:active {
    scale: 0.98;
    background-color: rgb(60, 120, 200);
}

.create-btn:disabled {
    background-color: rgb(60, 60, 70);
    color: rgb(100, 100, 110);
    scale: 1;
}

/* Enhanced Start Button with Glow Effect */
.popup-start-btn.ready-glow {
    /* Glow effect not supported in Unity UI Toolkit */
}

/* Note: Keyframe animations are not supported in Unity UI Toolkit.
   Use C# coroutines for animations instead. */

/* Note: Progress animations handled via C# transition-duration property */
.ready-progress-fill {
    /* Animation handled in C# code */
}

/* Input Validation Feedback */
.session-name-field.valid TextField {
    border-color: rgb(75, 190, 115);
    border-width: 2px;
}

.session-name-field.invalid TextField {
    border-color: rgb(220, 100, 100);
    border-width: 2px;
}

.validation-message {
    font-size: 11px;
    margin-top: 4px;
    padding: 4px 8px;
    border-radius: 4px;
}

.validation-message.error {
    color: rgb(255, 120, 120);
    background-color: rgba(220, 100, 100, 0.15);
}

.validation-message.success {
    color: rgb(120, 210, 150);
    background-color: rgba(75, 190, 115, 0.15);
}

/* Connecting/Loading State */
.connecting-overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.7);
    justify-content: center;
    align-items: center;
}

.connecting-spinner {
    width: 60px;
    height: 60px;
    border-width: 4px;
    border-color: rgb(100, 130, 180);
    border-radius: 30px;
    /* Spinner animation not supported - use C# rotate animation */
}

.connecting-text {
    font-size: 16px;
    color: rgb(200, 210, 230);
    margin-top: 16px;
    -unity-font-style: bold;
}

/* Empty State Improvements */
.empty-message {
    color: rgb(120, 120, 140);
    font-size: 15px;
    -unity-text-align: middle-center;
    padding: 40px 30px;
    -unity-font-style: italic;
}

.empty-message-icon {
    font-size: 48px;
    color: rgb(80, 80, 100);
    -unity-text-align: middle-center;
    margin-bottom: 16px;
}

.empty-message-title {
    font-size: 18px;
    color: rgb(150, 150, 170);
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    margin-bottom: 8px;
}

.empty-message-hint {
    font-size: 13px;
    color: rgb(100, 100, 120);
    -unity-text-align: middle-center;
    -unity-font-style: italic;
}

/* Session Count Badge */
.session-count-badge {
    padding: 4px 10px;
    background-color: rgba(75, 140, 230, 0.2);
    border-radius: 12px;
    border-width: 1px;
    border-color: rgba(75, 140, 230, 0.4);
    margin-left: 12px;
}

.session-count-text {
    font-size: 12px;
    color: rgb(140, 180, 230);
    -unity-font-style: bold;
}

/* Player Count Indicator */
.player-count-container {
    flex-direction: row;
    align-items: center;
    padding: 8px 12px;
    background-color: rgba(75, 190, 115, 0.12);
    border-radius: 8px;
    margin-bottom: 12px;
}

.player-count-icon {
    font-size: 16px;
    color: rgb(120, 200, 150);
    margin-right: 8px;
}

.player-count-text {
    font-size: 13px;
    color: rgb(150, 210, 180);
    -unity-font-style: bold;
}

/* Host Controls Section */
.host-controls {
    padding: 16px;
    background-color: rgba(255, 200, 75, 0.08);
    border-radius: 10px;
    border-width: 1px;
    border-color: rgba(255, 200, 75, 0.25);
    margin-bottom: 16px;
}

.host-badge-large {
    font-size: 14px;
    color: rgb(255, 200, 75);
    -unity-font-style: bold;
    margin-bottom: 10px;
    letter-spacing: 1px;
}

/* Quick Action Buttons */
.quick-action-btn {
    padding: 10px 18px;
    background-color: rgba(100, 130, 180, 0.2);
    border-radius: 6px;
    border-width: 1px;
    border-color: rgba(100, 130, 180, 0.4);
    color: rgb(180, 200, 230);
    font-size: 13px;
    margin-right: 8px;
    transition-duration: 0.15s;
}

.quick-action-btn:hover {
    background-color: rgba(100, 130, 180, 0.35);
    border-color: rgba(100, 130, 180, 0.6);
    scale: 1.05;
}

/* Responsive Breakpoints Hints */
@media (max-width: 800px) {
    .main-content {
        flex-direction: column;
    }
    
    .sessions-panel {
        min-width: 100%;
    }
    
    .log-panel {
        min-width: 100%;
        margin-top: 12px;
    }
}
