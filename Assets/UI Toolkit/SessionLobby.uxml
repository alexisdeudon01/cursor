<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <Style src="project://database/Assets/UI%20Toolkit/SessionLobby.uss?fileID=7433441132597879392&amp;guid=1438ee505b3b9ec4082046a2746c1ce4&amp;type=3#SessionLobby"/>

    <ui:VisualElement name="lobby-root" class="lobby-root">
        <ui:VisualElement name="header" class="header">
            <ui:VisualElement name="title-container" class="title-container">
                <ui:Label name="title-icon" text="&#127918;" class="title-icon" />
                <ui:Label name="title" text="Game Lobby" class="title" />
            </ui:VisualElement>
            <ui:VisualElement name="status-container" class="status-container">
                <ui:Label name="connection-status" text="&#9679; Connected" class="connection-status" />
            </ui:VisualElement>
        </ui:VisualElement>

        <ui:VisualElement name="view-tabs" class="view-tabs">
            <ui:Button name="TabSessionsButton" text="Sessions" class="tab-btn" />
            <ui:Button name="TabConsoleButton" text="Console" class="tab-btn tab-btn-last" />
        </ui:VisualElement>

        <ui:VisualElement name="main-content" class="main-content">
            <ui:VisualElement name="sessions-panel" class="panel sessions-panel">
                <ui:Label text="Available Sessions" class="panel-title" />
                <ui:ScrollView name="sessions-scroll" class="sessions-scroll">
                    <ui:VisualElement name="SessionsList" class="sessions-list" />
                </ui:ScrollView>

                <ui:VisualElement name="create-session" class="create-session">
                    <ui:Label text="&#128221; Create New Session" class="create-session-title" />
                    <ui:VisualElement name="session-form" class="session-form">
                        <ui:TextField name="SessionNameField" label="Session Name" value="My Session" class="session-name-field" />
                        <ui:VisualElement name="creation-hint" class="creation-hint">
                            <ui:Label text="&#128161; Tip: Choose a descriptive name for your session" class="hint-text" />
                        </ui:VisualElement>
                    </ui:VisualElement>
                    <ui:Button name="CreateSessionButton" text="+ Create Session" class="create-btn" />
                </ui:VisualElement>

                <ui:Button name="RefreshButton" text="&#8635; Refresh" class="refresh-btn" />
            </ui:VisualElement>

            <ui:VisualElement name="log-panel" class="panel log-panel">
                <ui:VisualElement class="log-header">
                    <ui:Label text="Console" class="panel-title" />
                    <ui:Button name="ClearLogsButton" text="Clear" class="clear-logs-btn" />
                </ui:VisualElement>
                <ui:ScrollView name="log-scroll" class="log-scroll">
                    <ui:VisualElement name="LogContainer" class="log-container" />
                </ui:ScrollView>
            </ui:VisualElement>
        </ui:VisualElement>

        <ui:VisualElement name="footer" class="footer">
            <ui:Button name="DisconnectButton" text="Disconnect" class="disconnect-btn" />
            <ui:Label name="StatusLabel" text="" class="status-label" />
        </ui:VisualElement>
    </ui:VisualElement>

    <ui:VisualElement name="popup-overlay" class="popup-overlay">
        <ui:VisualElement name="session-popup" class="session-popup">
            <ui:VisualElement name="popup-header" class="popup-header">
                <ui:Label name="PopupSessionName" text="Session Name" class="popup-title" />
                <ui:Button name="PopupCloseButton" text="Back" class="popup-close-btn" />
            </ui:VisualElement>

            <ui:VisualElement name="popup-info" class="popup-info">
                <ui:VisualElement name="game-selection-container" class="game-selection-container">
                    <ui:Label text="Game Configuration" class="popup-config-title" />
                    <ui:DropdownField name="PopupGameType" label="Game Type" class="popup-game-dropdown" />
                </ui:VisualElement>

                <ui:VisualElement name="players-container" class="players-container">
                    <ui:Label text="Players in Lobby" class="popup-players-title" />
                    <ui:ScrollView name="popup-players-scroll" class="popup-players-scroll">
                        <ui:VisualElement name="PopupPlayersList" class="popup-players-list" />
                    </ui:ScrollView>
                </ui:VisualElement>

                <ui:VisualElement name="ready-status-container" class="ready-status-container">
                    <ui:Label text="Ready Status" class="popup-ready-title" />
                    <ui:VisualElement name="ready-progress-container" class="ready-progress-container">
                        <ui:Label name="PopupReadyCount" text="0/0 ready" class="popup-ready-count" />
                        <ui:VisualElement name="ready-progress-bar" class="ready-progress-bar">
                            <ui:VisualElement name="ready-progress-fill" class="ready-progress-fill" />
                        </ui:VisualElement>
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>

            <ui:VisualElement name="popup-actions" class="popup-actions">
                <ui:Button name="PopupReadyButton" text="Ready" class="popup-ready-btn" />
                <ui:Button name="PopupStartButton" text="Start Game" class="popup-start-btn" />
                <ui:Button name="PopupLeaveButton" text="Leave Session" class="popup-leave-btn" />
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>

    <ui:VisualElement name="name-entry-panel" class="name-entry-panel">
        <ui:VisualElement name="name-entry-container" class="name-entry-container">
            <ui:Label text="Welcome" class="name-entry-title" />
            <ui:Label text="Enter your player name to continue" class="name-entry-subtitle" />
            <ui:TextField name="PlayerNameField" placeholder-text="Your name..." max-length="20" class="player-name-field" />
            <ui:Label name="name-validation-error" text="" class="validation-error" />
            <ui:Button name="ConfirmNameButton" text="Continue" class="confirm-name-btn" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
