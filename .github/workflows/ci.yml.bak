name: Unity CI (Linux + Docker + LFS + Codex)

on:
  push:
  pull_request:
  workflow_dispatch:
  schedule:
    - cron: "*/15 * * * *"

concurrency:
  group: unity-ci-${{ github.ref }}
  cancel-in-progress: true

permissions:
  contents: write
  packages: write
  pull-requests: write

env:
  UNITY_VERSION: 6000.3.0f1
  IMAGE_REF: ghcr.io/${{ github.repository }}/unityci:${{ github.sha }}

jobs:
  docker-image:
    runs-on: ubuntu-latest
    outputs:
      image_ref: ${{ steps.out.outputs.image_ref }}
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true

      - id: out
        run: echo "image_ref=${IMAGE_REF}" >> $GITHUB_OUTPUT

      - name: Login GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
        with:
          driver: docker-container

      - name: Build & push CI image
        uses: docker/build-push-action@v6
        with:
          context: .
          file: Dockerfile.ci
          push: true
          tags: ${{ env.IMAGE_REF }}
          cache-from: type=gha
          cache-to: type=gha,mode=max

  tests:
    runs-on: ubuntu-latest
    needs: docker-image
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true

      - uses: actions/cache@v4
        with:
          path: Library
          key: Library-${{ runner.os }}-${{ hashFiles('Assets/**', 'Packages/**', 'ProjectSettings/**') }}
          restore-keys: |
            Library-${{ runner.os }}-

      - name: Unity Tests (EditMode + PlayMode)
        uses: game-ci/unity-test-runner@v4
        env:
          UNITY_LICENSE: ${{ secrets.UNITY_LICENSE }}
          UNITY_EMAIL: ${{ secrets.UNITY_EMAIL }}
          UNITY_PASSWORD: ${{ secrets.UNITY_PASSWORD }}
        with:
          unityVersion: ${{ env.UNITY_VERSION }}
          githubToken: ${{ secrets.GITHUB_TOKEN }}
          customImage: ${{ needs.docker-image.outputs.image_ref }}

      - uses: actions/upload-artifact@v4
        with:
          name: test-results
          path: |
            artifacts
            TestResults
            **/TestResults
          if-no-files-found: warn

  build-linux:
    runs-on: ubuntu-latest
    needs: tests
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true

      - uses: actions/cache@v4
        with:
          path: Library
          key: Library-${{ runner.os }}-${{ hashFiles('Assets/**', 'Packages/**', 'ProjectSettings/**') }}
          restore-keys: |
            Library-${{ runner.os }}-

      - name: Build Linux (Mono forced)
        uses: game-ci/unity-builder@v4
        env:
          UNITY_LICENSE: ${{ secrets.UNITY_LICENSE }}
          UNITY_EMAIL: ${{ secrets.UNITY_EMAIL }}
          UNITY_PASSWORD: ${{ secrets.UNITY_PASSWORD }}
        with:
          unityVersion: ${{ env.UNITY_VERSION }}
          targetPlatform: StandaloneLinux64
          buildMethod: BuildLinuxMono.PerformBuild
          buildsPath: build

      - uses: actions/upload-artifact@v4
        with:
          name: linux-build
          path: build
          if-no-files-found: error

  codex-autopr:
    runs-on: ubuntu-latest
    needs: build-linux
    if: github.event_name == 'schedule' || github.event_name == 'workflow_dispatch'
    steps:
      - uses: actions/checkout@v4
        with:
          lfs: true
          fetch-depth: 0

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install openai

      - name: Run Codex auto-PR
        env:
          ANTHROPIC_API_KEY: ${{ secrets.ANTHROPIC_API_KEY }}
          CODEX_MODEL: gpt-5-codex
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          python scripts/codex_autopr.py
